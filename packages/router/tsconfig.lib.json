{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@analogjs/content": ["./node_modules/@analogjs/content"],
      "@analogjs/router/tokens": ["./tokens/src/index.ts"]
    }
  },
  "exclude": ["vite.config.ts", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["**/*.ts"]
}
