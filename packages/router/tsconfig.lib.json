{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"],
    "target": "ES2022",
    "useDefineForClassFields": false,
    "paths": {
      "@analogjs/content": ["./node_modules/@analogjs/content"]
    }
  },
  "exclude": ["vite.config.ts", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["**/*.ts"]
}
