{
  "name": "content",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/content/src",
  "prefix": "analogjs",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/node_modules/@analogjs/content"],
      "options": {
        "commands": [
          "nx build-package content",
          "nx build content-plugin",
          "rm node_modules/@analogjs/content/.npmignore"
        ],
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "build-package": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "outputs": ["{workspaceRoot}/node_modules/@analogjs/content"],
      "options": {
        "project": "packages/content/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/content/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/content/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "dependsOn": ["^build"],
      "executor": "@nx/vite:test"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "tagPrefix": "content@"
      }
    }
  }
}
