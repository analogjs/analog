{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "outDir": "../../dist/out-tsc",
    "inlineSourceMap": true,
    "sourceMap": false,
    "declaration": true,
    "types": [],
    "paths": {
      "@analogjs/vite-plugin-angular": [
        "./node_modules/@analogjs/vite-plugin-angular"
      ],
      "@analogjs/vite-plugin-nitro": [
        "./node_modules/@analogjs/vite-plugin-nitro"
      ]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/test-setup.ts"
  ]
}
