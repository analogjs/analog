{
  "name": "storybook-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "tags": ["type:release"],
  "implicitDependencies": ["vite-plugin-angular"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "node_modules/@analogjs/storybook-angular",
        "main": "packages/storybook-angular/src/index.ts",
        "tsConfig": "packages/storybook-angular/tsconfig.lib.json",
        "clean": true,
        "assets": [
          "packages/storybook-angular/*.md",
          {
            "input": "./packages/storybook-angular/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/storybook-angular/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/storybook-angular",
            "glob": "preset.js",
            "output": "./"
          }
        ]
      }
    },
    "tests": {
      "dependsOn": ["^build"],
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
